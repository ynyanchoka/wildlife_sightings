


{{#partial "content"}}
    <div class="animals">
        {{#if animals}}
            {{#each animals}}
                <div class="card" style="width: 12rem" >
                    <div class="card-body">
                        <p>Name:{{name}}</p>
                        <p>Type:{{type}}</p>
                        <p>Health:{{health}}</p>
                        <p>Age:{{age}}</p>

                        <a href="/animals/:id/delete"><button class="btn btn-dark">Delete</button></a>

                    </div>
                </div>
            {{/each}}
        {{else}}
            <h2>No animals! Create some animals <a href="/animals/new">here</a></h2>
        {{/if}}

    </div>

{{/partial}}
{{> layout.hbs}}