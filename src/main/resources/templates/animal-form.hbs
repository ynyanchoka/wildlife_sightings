{{#partial "content"}}
    <div class="form">
        <form action="/animals" method="post">
            <h1>Create Animal</h1>
            <hr>

            {{#if endangered}}
                <div class="form-group">
                    <label for="type">Type</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="normal"
                               onClick="window.location = '/animals/new';" >
                        <label class="form-check-label" for="inlineRadio1">Normal</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="endangered"
                               onClick="window.location = '/animals/new/endangered';" checked>
                        <label class="form-check-label" for="inlineRadio2">Endangered</label>

                    </div>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Input Name..." required>
                </div>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="health">Health</label>
                        </div>
                        <select class="custom-select" id="health" name="health">
                            <option value="Healthy">Healthy</option>
                            <option value="Okay">Okay</option>
                            <option value="Ill">Ill</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="age">Age</label>
                        </div>
                        <select class="custom-select" id="age" name="age">


                            <option value="Newborn">Newborn</option>
                            <option value="Young">Young</option>
                            <option value="Adult">Adult</option>
                        </select>
                    </div>
                </div>
            {{else}}
                <div class="form-group">
                    <label for="type">Type</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="Common"
                               onClick="window.location = '/animals/new';" checked>
                        <label class="form-check-label" for="inlineRadio1">Normal</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="endangered"
                               onClick="window.location = '/animals/new/endangered';">
                        <label class="form-check-label" for="inlineRadio2">Endangered</label>

                    </div>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Input Name..." required>
                </div>

            {{/if}}
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg"> Create </button>
            </div>

        </form>
    </div>

{{/partial}}
{{> layout.hbs}}